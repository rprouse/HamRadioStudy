<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HamRadioStudy.MainPage"
             Title="Ham Radio Study">

  <ScrollView>
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
      <Image
            Source="tower.png"
            HeightRequest="185"
            Aspect="AspectFit" />

      <Label
            Text="Practice questions for the Canadian Basic Radio Operators Certificate"
            LineBreakMode="WordWrap"
            Style="{StaticResource SubHeadline}" />

      <Button
            Text="All Questions" 
            LineBreakMode="WordWrap"
            Clicked="OnAllQuestionsClicked"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
