<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="HamRadioStudy.Views.QuestionView">

  <StackLayout Margin="20">
    <Label Text="{Binding Id}" FontSize="24"/>
    <Label Text="{Binding QuestionText}" FontSize="18" Margin="0,10,0,0" LineBreakMode="WordWrap"/>

    <CollectionView ItemsSource="{Binding Answers}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Button
            Text="{Binding}"
            Command="{Binding Path=BindingContext.AnswerCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
            CommandParameter="{Binding}"
            LineBreakMode="WordWrap"
            Margin="10"
            HorizontalOptions="Fill" />
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </StackLayout>

</ContentView>